.well(style='padding: 8px 0;')
  ul.nav.nav-list
    li.nav-header User Actions
    - var unassignedActive = (title == 'unassigned' ? 'active' : '')
    - if(privileges != 0)
      li(class = unassignedActive)
        a(href='/loanofficer/#{agentId}/unassigned')
