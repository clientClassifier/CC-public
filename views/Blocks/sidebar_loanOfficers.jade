      li.active
        a(href='/loanofficer/#{agentId}')
          i.icon.icon-home
          | Home
    else
      li 
        a(href='/loanofficer/#{agentId}')
          i.icon.icon-home 
          |  Home  


       //- my One major problem with this sort solution, is what if its something not A+,A,B,C,D how do i catch that? (long conditional?)
    li.nav-header Days
      if(clients != null)
        each client in clients
          if(client.calculator.grade == 'A+' || client.calculator.grade == 'A')
            mixin client(client.firstName, client.middleName, client.lastName, client._id, currentClientId)  
    li.nav-header Weeks
      if(clients != null)
        each client in clients
          if(client.calculator.grade == 'B' || client.calculator.grade == 'C')
            mixin client(client.firstName, client.middleName, client.lastName, client._id, currentClientId)  
    li.nav-header Months
      if(clients != null)
        each client in clients
          if(client.calculator.grade == 'D' || client.calculator.grade == '')
            mixin client(client.firstName, client.middleName, client.lastName, client._id, currentClientId)  







